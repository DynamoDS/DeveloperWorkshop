<ResourceDictionary x:Class="RapidFire.UI.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RapidFire.UI"
             mc:Ignorable="d" 
            >
    <SolidColorBrush x:Key="RF_BlackBorder" Color="#353535" />
    <SolidColorBrush x:Key="RF_NodeDark" Color="#5e5c5a"/>
    <SolidColorBrush x:Key="RF_DarkBeige" Color="#cbc6be"/>
    <SolidColorBrush x:Key="RF_LightBeige" Color="#dbd7d1"/>

    <SolidColorBrush x:Key="RF_Red" Color="#c74748"/>
    <SolidColorBrush x:Key="RF_Blue" Color="#5a9cbc"/>
    <SolidColorBrush x:Key="RF_Orange" Color="#c47d47"/>

    <Style TargetType="Button" x:Key="RF_Buttons">
        <Setter Property="Background" Value="{StaticResource RF_NodeDark}"/>
        <Setter Property="Foreground" Value="{StaticResource RF_LightBeige}"/>
    </Style>

    <Style TargetType="ListBox" x:Key="RF_ListBackground">
        <Setter Property="Background" Value="{StaticResource RF_LightBeige}"/>
    </Style>


</ResourceDictionary>
